@{
    Layout = null;
    ViewData["Title"] = "Home Page";
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Pizzeria statica</title>
    <link href="~/css/myStyle.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>

    @*  navbar *@
    <header>

        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Pizzeria statica</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="#">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/Home/UserIndex">Le pizze</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <main>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Descrizione</th>
                    <th scope="col">Foto</th>
                    <th scope="col">Prezzo</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">1</th>
                    <td>Margherita</td>
                    <td>La classica pizza Margherita è una deliziosa combinazione di pomodoro fresco, mozzarella di bufala, basilico e olio d'oliva extravergine su una crosta sottile e croccante. È un'esplosione di sapori italiani in ogni morso.</td>
                    <td>
                        <img class="pizza" src="~/img/margherita.jpg" />
                    </td>
                    <td>10 €</td>
                </tr>
                <tr>
                    <th scope="row">2</th>
                    <td>Quattro formaggi</td>
                    <td>La pizza Quattro Formaggi è una festa per gli amanti del formaggio. Questa pizza è coperta da una miscela di quattro formaggi prelibati: mozzarella, gorgonzola, provolone e parmigiano-reggiano. Una scelta irresistibile per i palati più golosi.</td>
                    <td>
                        <img class="pizza" src="~/img/quattro formaggi.jpg" />
                    </td>
                    <td>12 €</td>
                </tr>
                <tr>
                    <th scope="row">3</th>
                    <td>Vegetariana</td>
                    <td>La pizza Vegetariana è una scelta salutare e deliziosa per i non carnivori. Questa pizza è carica di verdure fresche come peperoni, cipolle, pomodori, funghi e olive nere, il tutto coperto da una generosa porzione di formaggio mozzarella.</td>
                    <td>
                        <img class="pizza" src="~/img/vegetariana.jpg" />
                    </td>
                    <td>11 €</td>
                </tr>
            </tbody>
        </table>
    </main>

    @*    bootstrap *@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>